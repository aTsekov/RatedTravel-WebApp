@model List<RatedTravel.Web.ViewModels.Restaurant.RestaurantAllModel>

@{
    ViewData["Title"] = "All Restaurants in " + Model[0].CityName;
}

<style>
    .city-name-box {
        background-color: #f8f9fa;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 8px;
        text-align: center;
    }

    .rating-stars {
        color: #ffc107;
        font-size: 24px;
    }

    .rating-empty-stars {
        color: #ced4da;
        font-size: 24px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="city-name-box">
                <h3>Here are all restaurants in @Model[0].CityName</h3>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var restaurant in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img class="card-img-top" style="max-height: 300px;" src="~/Images/@restaurant.Image" alt="City Image">
                    <div class="card-body">
                        <h5 class="card-title">@restaurant.Name</h5>
                        <p class="card-text">@restaurant.Description</p>
                        <p class="card-text">Address: @restaurant.Address</p>
                        @if (restaurant.OverallScore > 0)
                        {
                            <div class="rating-stars">
                                @for (int i = 0; i < 5; i++)
                                {
                                    if (i < (int)restaurant.OverallScore)
                                    {
                                        <span class="bi bi-star-fill"></span>
                                    }
                                    else if (i == (int)restaurant.OverallScore && restaurant.OverallScore % 1 != 0)
                                    {
                                        <span class="bi bi-star-half"></span>
                                    }
                                    else
                                    {
                                        <span class="bi bi-star"></span>
                                    }
                                }
                            </div>
                        }
                        else
                        {
                            <p class="card-text">No reviews</p>
                        }
                        <a href="@Url.Action("Details", "Restaurant", new { id = restaurant.Id })" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
