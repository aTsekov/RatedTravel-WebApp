@model RatedTravel.Web.ViewModels.Restaurant.RestaurantDetailsView

@{
    ViewData["Title"] = "Restaurant Details";
}

<style>
    /* Custom star-rating styles */
    .rating {
        unicode-bidi: bidi-override;
        direction: rtl;
        text-align: center;
    }

        .rating input {
            display: none;
        }

        .rating label {
            display: inline-block;
            font-size: 24px;
            padding: 3px;
            cursor: pointer;
            color: #ddd;
        }

            .rating label::before {
                content: '\2605'; /* Star symbol */
            }

        .rating input:checked ~ label {
            color: #ffc107; /* Yellow color for filled stars */
        }
</style>

<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>@Model.Name</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img class="card-img-top" src="~/Images/@Model.Image" alt="Restaurant Image">
                        </div>
                        <div class="col-md-8">
                            <p><strong>Address:</strong> @Model.Address</p>
                            <p><strong>City:</strong> @Model.CityName</p>
                            <p><strong>Description:</strong> @Model.Description</p>
                            <p><strong>Overall Score:</strong> @Model.OverallScore</p>
                        </div>
                    </div>
                    <hr />
                    <h4>Reviews</h4>
                    @if (Model.Reviews.Any())
                    {
                        foreach (var review in Model.Reviews)
                        {
                            <div class="card mt-3">
                                <div class="card-body">
                                    <p><strong>Review:</strong> @review.ReviewText</p>
                                    <p><strong>Location Rate:</strong> @review.LocationRate</p>
                                    <p><strong>Food Rate:</strong> @review.FoodRate</p>
                                    <p><strong>Price Rate:</strong> @review.PriceRate</p>
                                    <p><strong>Service Rate:</strong> @review.ServiceRate</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>No reviews available.</p>
                    }
                    <hr />
                    <h4>Leave a Review</h4>
                    <form asp-controller="Restaurant" asp-action="AddReview" method="post">
                        <div class="form-group">
                            <label for="reviewText">Review:</label>
                            <textarea class="form-control" id="reviewText" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="locationRate">Location Rate:</label>
                            <div class="rating">
                                <input type="radio" name="locationRate" value="1" id="locationRate1" required />
                                <label for="locationRate1"></label>
                                <input type="radio" name="locationRate" value="2" id="locationRate2" required />
                                <label for="locationRate2"></label>
                                <input type="radio" name="locationRate" value="3" id="locationRate3" required />
                                <label for="locationRate3"></label>
                                <input type="radio" name="locationRate" value="4" id="locationRate4" required />
                                <label for="locationRate4"></label>
                                <input type="radio" name="locationRate" value="5" id="locationRate5" required />
                                <label for="locationRate5"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="foodRate">Food Rate:</label>
                            <div class="rating">
                                <input type="radio" name="foodRate" value="1" id="foodRate1" required />
                                <label for="foodRate1"></label>
                                <input type="radio" name="foodRate" value="2" id="foodRate2" required />
                                <label for="foodRate2"></label>
                                <input type="radio" name="foodRate" value="3" id="foodRate3" required />
                                <label for="foodRate3"></label>
                                <input type="radio" name="foodRate" value="4" id="foodRate4" required />
                                <label for="foodRate4"></label>
                                <input type="radio" name="foodRate" value="5" id="foodRate5" required />
                                <label for="foodRate5"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="priceRate">Price Rate:</label>
                            <div class="rating">
                                <input type="radio" name="priceRate" value="1" id="priceRate1" required />
                                <label for="priceRate1"></label>
                                <input type="radio" name="priceRate" value="2" id="priceRate2" required />
                                <label for="priceRate2"></label>
                                <input type="radio" name="priceRate" value="3" id="priceRate3" required />
                                <label for="priceRate3"></label>
                                <input type="radio" name="priceRate" value="4" id="priceRate4" required />
                                <label for="priceRate4"></label>
                                <input type="radio" name="priceRate" value="5" id="priceRate5" required />
                                <label for="priceRate5"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="serviceRate">Service Rate:</label>
                            <div class="rating">
                                <input type="radio" name="serviceRate" value="1" id="serviceRate1" required />
                                <label for="serviceRate1"></label>
                                <input type="radio" name="serviceRate" value="2" id="serviceRate2" required />
                                <label for="serviceRate2"></label>
                                <input type="radio" name="serviceRate" value="3" id="serviceRate3" required />
                                <label for="serviceRate3"></label>
                                <input type="radio" name="serviceRate" value="4" id="serviceRate4" required />
                                <label for="serviceRate4"></label>
                                <input type="radio" name="serviceRate" value="5" id="serviceRate5" required />
                                <label for="serviceRate5"></label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Review</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial.cshtml" />
}
