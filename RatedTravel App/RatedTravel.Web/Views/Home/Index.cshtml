@{
    ViewData["Title"] = "Home Page";
}


<div class="container my-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<div class="card-header bg-primary text-white">
					<h3 class="mb-0">Select a City</h3>
				</div>
				<div class="card-body">
					<form asp-controller="City" asp-action="SelectCity">
						<div class="form-group">
							<label for="cities">Select a city:</label>
							<select class="form-control" id="cities" name="cities">
								<option value="new-york">New York</option>
								<option value="los-angeles">Los Angeles</option>
								<option value="chicago">Chicago</option>
							</select>
						</div>
						<button class="btn btn-primary btn-lg btn-block">Select City</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>