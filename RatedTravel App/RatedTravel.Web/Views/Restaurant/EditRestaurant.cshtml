@model RestaurantFormModel

@{
    ViewData["Title"] = "Add Restaurant";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="container-fluid bg-lightblue-transparent text-white py-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card darkblue text-white border-4">
                <div class="card-header bg-secondary text-white">
                    <h3 class="mb-0">Edit Restaurant</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Restaurant" asp-action="EditRestaurant" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="@Model.Name" class="text-black">Restaurant Name:</label>
                            <input asp-for="@Model.Name" class="form-control bg-lightblue text-black" id="Name" name="Name" required>
                            <span asp-validation-for="Name" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CityName" class="text-black">City Name:</label>
                            <input asp-for="CityName" class="form-control bg-lightblue text-black" id="CityName" name="CityName" required>
                            <span asp-validation-for="CityName" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageFile" class="text-black">Upload Image:</label>
                            <div class="input-group">
                                <input asp-for="ImageFile" class="form-control-file bg-lightblue text-black" id="ImageFile" name="ImageFile">
                            </div>
                            <span asp-validation-for="ImageFile" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="text-black">Address:</label>
                            <textarea asp-for="Address" class="form-control bg-lightblue text-black" id="Address" name="Address" rows="3" required></textarea>
                            <span asp-validation-for="Address" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="text-black">Description:</label>
                            <textarea asp-for="Description" class="form-control bg-lightblue text-black" id="Description" name="Description" rows="3" required></textarea>
                            <span asp-validation-for="Description" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OverallScore" class="text-black">Overall Score (1-5):</label>
                            <input asp-for="OverallScore" class="form-control bg-lightblue text-black" id="OverallScore" name="OverallScore" min="1" max="5" required>
                            <span asp-validation-for="OverallScore" class="small text-danger"></span>
                        </div>

                        <!-- You might want to add UserId and CityId as hidden fields if they are not meant to be edited here -->

                        <button class="btn card-header bg-secondary text-white border">Edit Restaurant</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}
