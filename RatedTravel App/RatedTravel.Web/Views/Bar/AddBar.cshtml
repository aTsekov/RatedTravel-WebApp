@model RatedTravel.Web.ViewModels.Bar.BarFormModel

@{
    ViewData["Title"] = "Add Bar";
}

<div class="container-fluid bg-lightblue-transparent text-white py-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card darkblue text-white border-4">
                <div class="card-header bg-secondary text-white">
                    <h3 class="mb-0">Add a Bar</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Bar" asp-action="AddBar" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="@Model.Name" class="text-black">Bar Name:</label>
                            <input asp-for="@Model.Name" class="form-control bg-lightblue text-black" id="Name" name="Name" required>
                            <span asp-validation-for="Name" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.CityName" class="text-black">City Name:</label>
                            <input asp-for="@Model.CityName" class="form-control bg-lightblue text-black" id="CityName" name="CityName" required>
                            <span asp-validation-for="CityName" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageFile" class="text-black">Upload Image:</label>
                            <div class="input-group">
                                <input asp-for="ImageFile" class="form-control-file bg-lightblue text-black" id="ImageFile" name="ImageFile">
                            </div>
                            <span asp-validation-for="ImageFile" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="text-black">Address:</label>
                            <input asp-for="Address" class="form-control bg-lightblue text-black" id="Address" name="Address" required>
                            <span asp-validation-for="Address" class="small text-danger"></span>
                        </div>
	                    <div class="form-group">
		                    <label asp-for="Description" class="text-black">Description:</label>
		                    <textarea asp-for="Description" class="form-control bg-lightblue text-black" id="Description" name="Description" rows="3" required></textarea>
		                    <span asp-validation-for="Description" class="small text-danger"></span>
	                    </div>
	                    <div class="form-group">
		                    <label asp-for="Website" class="text-black">Website:</label>
                            <textarea asp-for="Website" class="form-control bg-lightblue text-black" id="Website" name="Website" rows="3" required></textarea>
                            <span asp-validation-for="Website" class="small text-danger"></span>
	                    </div>
                        <div class="form-group">
                            <label asp-for="OverallScore" class="text-black">Overall Score:</label>
                            <input asp-for="OverallScore" class="form-control bg-lightblue text-black" id="OverallScore" name="OverallScore" min="1" max="5" required>
                            <span asp-validation-for="OverallScore" class="small text-danger"></span>
                        </div>
                        <button class="btn card-header bg-secondary text-white border">Add Bar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}
